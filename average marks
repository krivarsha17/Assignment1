        let average = add / 5
        if(average >= 90){
            document.write("Grade A");
        }
        else if(average >= 80){
            document.write("Grade B");
        }
        else if(average >= 70){
            document.write("Grade C");
        }
        else if(average >= 60){
            document.write("Grade D");
        }
        else if(average >= 50){
            document.write("Grade E");
        }
        else if(average >= 40){
            document.write("Grade F");
        }
        else {
            document.write("you are fail");
        }
